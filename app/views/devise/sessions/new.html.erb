
<div class="login-key">
  <h2>用户登录</h2>
  <hr class="login-line"/>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login-content">
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "请输入邮箱" %>
    <%= f.input :password, required: true, label: false, placeholder: "请输入密码" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.submit "现在登录", class: "login-submit" %>
  </div>
<% end %>
<hr class="login-line"/>

<div class="extra-link">
<%= render "devise/shared/links" %>
</div>
</div>

<div class="order-frame">
    <h2 class="text-center">订单列表</h2>

    <div class="order-bar">
      <strong><%= link_to("全部订单", account_orders_path) %></strong>
      <span><%= link_to("已付款", account_orders_path(status: "paid")) %></span>
      <span><%= link_to("未付款", account_orders_path(status:"unpaid")) %></span>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="30%">订单号</th>
          <th width="50%">购买产品</th>
          <th width="20">下单时间</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to(order.token,order_path(order.token)) %></td>
            <td>
              <% order.product_lists.each do |product_list| %>
                <%= product_list.product_name %><br>
              <% end %>
            </td>
            <td><%= order.created_at.to_s(:long) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<div class="clearfix newbar">
  <%= link_to("上架新品", new_admin_product_path, class: "btn btn-primary pull-right") %>
</div>
<div class="col-md-11 col-xs-12">
<table class="table table-bordered">
  <thead>
    <th>商品详情</th>
    <th>品名</th>
    <th>单价</th>
    <th>库存</th>
    <th>编辑</th>
    <th>下架</th>
    <th>上架时间</th>

  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.photos.present? %>
              <%= image_tag(product.photos[0].avatar.small.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("https://ww4.sinaimg.cn/large/006tNc79ly1fe2owhk361j307c05bmx4.jpg", width: 100, height:100, class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td>  <%= link_to("编辑", edit_admin_product_path(product),class: "btn btn-success btn-sm")%> </td>
        <td><%= link_to(content_tag(:i, "", class: "fa fa-trash "), admin_product_path(product),
                                  method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-md")%>
        </td>
        <td><%= product.created_at.to_s(:long) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
